                    </div>

                    <!-- Catalog Paging Buttons -->
                    <div>
                        <ul class="nav tm-paging-links d-flex justify-content-center">
                        <c:forEach varStatus="i" begin="1" end="${maxPage }" >
                       	 	<li class="nav-item ${currentPage == i.index ? 'active' : '' }"><a href="./HomeControler?page=${i.index}" class="nav-link tm-paging-link ">${i.index}</a></li>
