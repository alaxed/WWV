                    <div class="row tm-catalog-item-list">
                    <c:forEach var="v" items="${v}">
                    
                    
                        <div class="col-lg-4 col-md-6 col-sm-12 tm-catalog-item">
                            <div class="position-relative tm-thumbnail-container">
                                <img src="https://img.youtube.com/vi/${v.poster}/maxresdefault.jpg" alt="Image" class="img-fluid tm-catalog-item-img">    
                                <a href="./video?action=watch&idV=${v.id}" class="position-absolute tm-img-overlay">
